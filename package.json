{
  "name": "angular-css-scope-sandbox",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start:with-scope": "ng serve app-with-css-scope",
    "start:without-scope": "ng serve app-without-css-scope",
    "build:with-scope": "ng build app-with-css-scope",
    "build:without-scope": "ng build app-without-css-scope",
    "predeploy": "ng build app-with-css-scope --base-href /angular-css-scope-sandbox/",
    "deploy": "angular-cli-ghpages --dir=dist/app-with-css-scope",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "angular-cli-ghpages": "^3.0.2",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
